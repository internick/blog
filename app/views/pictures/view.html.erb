<html>
<head>
	<title><%= @picture.title.truncate(40) %></title>
	
	<style type="text/css">
	
	body {
		background-color:#6C6;
		margin: 10px 10px 0px 10px;
		color:#033;
		}
		
	#heading {
		width:760px;
		border-bottom: 1px #033 solid;
		padding-bottom:4px;
		margin-bottom:12px;	
		font-family:trebuchet ms, verdana, arial;
		font-size:24px;
		font-weight:bold;
		text-align:center;
	}
	
	#caption {
		width:640px;
		font-family:verdana,arial;
		font-size:12px;
		font-weight:bold;
		padding-top:10px;
		padding-bottom:10px;
	}
	
	</style>
	
</head>

<body>
<div id="heading"><%= image_tag("leftg.gif", :size=>'50x15') %><%= @picture.title %><%= image_tag("rightg.gif", :size=>'50x15') %></div>
<div align="center">
	<table border=0 cellpadding=0 cellspacing=0>
	<tr valign="middle">
		<td width=50>
			<% if @prev_pos %>
				<%= link_to(image_tag("prev.gif", :size=>'50x38', :border=>0), {:action=>"view", :p=>@picture_list.join(","), :pos => @prev_pos}) %>
			<% else %>
				&nbsp;
			<% end %>
		</td>
		<td align="center"><img style="border:2px solid #033;padding-bottom:0px;margin-bottom:0px;" src="/pictures/<%= @picture.file_name %>" width=<%= @picture.width %> height=<%= @picture.height %>></td>
		<td width=50>
			<% if @next_pos %>
				<%= link_to(image_tag("next.gif", :size=>'50x38', :border=>0), {:action=>"view", :p=>@picture_list.join(","), :pos => @next_pos}) %>
			<% else %>
				&nbsp;
			<% end %>
		</td>
	</tr>
	</table>
	<div id="caption"><%= raw(@picture.caption) %></div>
</div>
</body>
</html>
